// Imports
import org.openhab.core.library.types.*
import org.openhab.core.persistence.*
import org.openhab.model.script.actions.*

// Global Variables

rule "Switch_1 ON/OFF"
when
    Item Sensor2_Motion changed
then
  if ((Sensor2_Motion.state == OPEN)) {
    sendCommand(Switch_1, ON)
  }
  else if ((Sensor2_Motion.state == CLOSED)) {
    sendCommand(Switch_1, OFF)
  }
end


